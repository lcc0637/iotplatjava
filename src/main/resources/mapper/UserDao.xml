            </if>
            <if test="idnumber != null and idnumber != ''">
                idnumber = #{idnumber},
            </if>
            <if test="cardnumber != null">
                cardnumber = #{cardnumber},
            </if>
            <if test="mcardno != null and mcardno != ''">
                mcardno = #{mcardno},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from iotbj.user where id = #{id}
    </delete>

</mapper>