<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipincloud.iotbj.srv.dao.BtnDao">

    <resultMap type="com.ipincloud.iotbj.srv.domain.Btn" id="BtnMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="pageId" column="page_id" jdbcType="INTEGER"/>
        <result property="pageTitle" column="page_title" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="memo" column="memo" jdbcType="VARCHAR"/>
        <result property="pagePath" column="page_path" jdbcType="VARCHAR"/>
        <result property="srvt" column="srvt" jdbcType="VARCHAR"/>
        <result property="tbns" column="tbns" jdbcType="VARCHAR"/>
        <result property="needLogin" column="need_login" jdbcType="VARCHAR"/>
        <result property="encode" column="encode" jdbcType="VARCHAR"/>
        <result property="rbac" column="rbac" jdbcType="VARCHAR"/>
        <result property="dataRange" column="data_range" jdbcType="VARCHAR"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BtnMap">
        select
          id, title, page_id, page_title, path, sort, memo, page_path, srvt, tbns, need_login, encode, rbac, data_range, version
        from iotbj.btn
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BtnMap">
        select
          id, title, page_id, page_title, path, sort, memo, page_path, srvt, tbns, need_login, encode, rbac, data_range, version
        from iotbj.btn
        limit #{offset}, #{limit}
    </select>

    <select id="queryByUserId" resultMap="BtnMap">
        select
          btn.* 
        from btn join role_btn on role_btn.btn_id= btn.id  join user_role on user_role.role_id=role_btn.role_id  where user_role.user_id= #{userId} order by btn.page_id asc,btn.sort asc
    </select>

   


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BtnMap">
        select
          id, title, page_id, page_title, path, sort, memo, page_path, srvt, tbns, need_login, encode, rbac, data_range, version
        from iotbj.btn
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="pageId != null">
                and page_id = #{pageId}
            </if>
            <if test="pageTitle != null and pageTitle != ''">
                and page_title = #{pageTitle}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
            <if test="pagePath != null and pagePath != ''">
                and page_path = #{pagePath}
            </if>
            <if test="srvt != null and srvt != ''">
                and srvt = #{srvt}
            </if>
            <if test="tbns != null and tbns != ''">
                and tbns = #{tbns}
            </if>
            <if test="needLogin != null and needLogin != ''">
                and need_login = #{needLogin}
            </if>
            <if test="encode != null and encode != ''">
                and encode = #{encode}
            </if>
            <if test="rbac != null and rbac != ''">
                and rbac = #{rbac}
            </if>
            <if test="dataRange != null and dataRange != ''">
                and data_range = #{dataRange}
            </if>
            <if test="version != null">
                and version = #{version}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into iotbj.btn(title, page_id, page_title, path, sort, memo, page_path, srvt, tbns, need_login, encode, rbac, data_range, version)
        values (#{title}, #{pageId}, #{pageTitle}, #{path}, #{sort}, #{memo}, #{pagePath}, #{srvt}, #{tbns}, #{needLogin}, #{encode}, #{rbac}, #{dataRange}, #{version})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update iotbj.btn
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="pageId != null">
                page_id = #{pageId},
            </if>
            <if test="pageTitle != null and pageTitle != ''">
                page_title = #{pageTitle},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="memo != null and memo != ''">
                memo = #{memo},
            </if>
            <if test="pagePath != null and pagePath != ''">
                page_path = #{pagePath},
            </if>
            <if test="srvt != null and srvt != ''">
                srvt = #{srvt},
            </if>
            <if test="tbns != null and tbns != ''">
                tbns = #{tbns},
            </if>
            <if test="needLogin != null and needLogin != ''">
                need_login = #{needLogin},
            </if>
            <if test="encode != null and encode != ''">
                encode = #{encode},
            </if>
            <if test="rbac != null and rbac != ''">
                rbac = #{rbac},
            </if>
            <if test="dataRange != null and dataRange != ''">
                data_range = #{dataRange},
            </if>
            <if test="version != null">
                version = #{version},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from iotbj.btn where id = #{id}
    </delete>

</mapper>